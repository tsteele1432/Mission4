
@{
    ViewData["Title"] = "Movie List";
}

@model List<Movie>

<table class="table table-bordered table-striped">



    <thead class="font-weight-bold">

        @* table headers *@
        <tr>
            <td>Title</td>
            <td>Category</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Notes</td>
        </tr>
    </thead>

    <tbody>

        @* brings up each record from database *@
        @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Title</td>
                    <td>@x.Category.CategoryName</td>
                    <td>@x.Year</td>
                    <td>@x.Director</td>
                    <td>@x.Rating</td>
                    <td>@x.Edited</td>
                    <td>@x.LentTo</td>
                    <td>@x.Notes</td>


                    @* edit and delete buttons *@
                    <td><a asp-controller="Home" asp-action="Edit" asp-route-movieid="@x.MovieId">Edit</a></td>
                    <td><a asp-controller="Home" asp-action="Delete" asp-route-movieid="@x.MovieId">Delete</a></td>
                </tr>

                
            }
    </tbody>

</table>